<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    app:cardElevation="4dp"
    app:contentPadding="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4">


        <ImageView
            android:id="@+id/img_order_item"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_launcher_background" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_weight="3"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_drink_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="QQ Green Tea"
                    android:textSize="24sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_local_drink_black_24dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/txt_drink_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4"
                    android:textSize="24sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/txt_sugar_ice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sugar: 50 , Ice: 50"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txt_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Size L"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/txt_topping"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jelly Beans, Fruits"
                android:textSize="16sp" />


        </LinearLayout>


    </LinearLayout>

</android.support.v7.widget.CardView>